# Production Environment Configuration
# Copy this to .env when deploying to production

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Django secret key - MUST be changed for production
SECRET_KEY=your-production-secret-key-here

# Environment type - production
DJANGO_ENV=production

# Debug mode - disabled for production
DEBUG=False

# Allowed hosts - configure for your production domain
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

# PostgreSQL Database Settings
DB_NAME=faq_production
DB_USER=faq_user
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600

# Alternative: Use DATABASE_URL for services like Heroku
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# HTTPS enforcement - enable for production
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Gemini AI Configuration
GEMINI_API_KEY=your-real-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# =============================================================================
# RAG SYSTEM CONFIGURATION
# =============================================================================

# Embedding configuration
RAG_EMBEDDING_TYPE=local
RAG_LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_VECTOR_DIMENSION=384
RAG_SIMILARITY_THRESHOLD=0.5
RAG_VECTOR_STORE_TYPE=qdrant

# =============================================================================
# VECTOR DATABASE (QDRANT) CONFIGURATION
# =============================================================================

# Qdrant connection settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=faq_embeddings
QDRANT_TIMEOUT=30

# =============================================================================
# CACHE CONFIGURATION (REDIS)
# =============================================================================

# Redis connection settings
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email backend for error notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=admin@yourdomain.com